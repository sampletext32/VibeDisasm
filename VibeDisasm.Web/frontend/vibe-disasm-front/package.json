{
  "name": "vibe-disasm-front",
  "version": "0.0.0",
  "main": "electron/main.js",
  "build": {
    "appId": "com.vibedisasm.app",
    "productName": "VibeDisasm",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "dist/vibe-disasm-front/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["portable"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "mac": {
      "target": ["dmg"]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "electron": "electron .",
    "electron:dev": "node electron/electron-dev.js",
    "electron:build": "npm run build:prod && electron-builder build",
    "electron:build:win": "npm run build:prod && electron-builder build --win",
    "electron:build:mac": "npm run build:prod && electron-builder build --mac",
    "electron:build:linux": "npm run build:prod && electron-builder build --linux"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.0.1",
    "@angular/cdk": "^20.0.2",
    "@angular/common": "^20.0.1",
    "@angular/compiler": "^20.0.1",
    "@angular/core": "^20.0.1",
    "@angular/forms": "^20.0.1",
    "@angular/material": "^20.0.2",
    "@angular/platform-browser": "^20.0.1",
    "@angular/platform-browser-dynamic": "^20.0.1",
    "@angular/router": "^20.0.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/cli": "^20.0.1",
    "@angular/compiler-cli": "^20.0.1",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "electron": "^36.4.0",
    "jasmine-core": "~4.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~5.8.3",
    "wait-on": "^7.2.0",
    "electron-builder": "^24.13.1"
  }
}